{
  "name": "universal-react-relay-starter-kit",
  "version": "0.1.0",
  "description": "A starter kit to build web apps using react and relay.",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev-ssr dev-hmr",
    "dev-ssr": "better-npm-run dev",
    "dev-hmr": "webpack-dev-server --config webpack.config.dev.babel.js",
    "postinstall": "npm run build",
    "build": "better-npm-run build",
    "start": "npm-run-all --parallel start-ssr",
    "start-ssr": "better-npm-run start",
    "lint": "./node_modules/.bin/eslint ./src"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon .",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --config webpack.config.prod.babel.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src"
      }
    },
    "start": {
      "command": "node .",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src",
        "BABEL_DISABLE_CACHE": 1
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suranartnc/universal-react-relay-starter-kit.git"
  },
  "keywords": [
    "react",
    "relay",
    "graphql",
    "universal",
    "es2015"
  ],
  "author": "Suranart Niamcome",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suranartnc/universal-react-relay-starter-kit/issues"
  },
  "homepage": "https://github.com/suranartnc/universal-react-relay-starter-kit#readme",
  "dependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "autoprefixer": "^6.5.1",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-plugin-lodash": "^3.2.9",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "better-npm-run": "0.0.11",
    "body-parser": "^1.15.2",
    "css-loader": "^0.25.0",
    "es6-promise": "^4.0.5",
    "express": "^4.14.0",
    "express-graphql": "^0.5.4",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "graphql": "^0.7.2",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "mongoose": "^4.6.4",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1",
    "postcss-loader": "^1.0.0",
    "progress-bar-webpack-plugin": "^1.9.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-helmet": "^3.1.0",
    "react-relay": "^0.9.3",
    "react-router": "^2.8.1",
    "react-router-scroll": "^0.3.2",
    "sass-loader": "^4.0.2",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.25"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "nodemon": "^1.11.0",
    "webpack-dev-server": "^2.1.0-beta.9"
  }
}
